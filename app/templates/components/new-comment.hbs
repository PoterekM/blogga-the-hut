{{#if addNewComment}}
<h2>New Comment</h2>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name:</label>
      {{input value=name id="name"}}
    </div>
    <div class="form-group">
      <label for="word">Comment:</label>
      {{textarea value=word id="word"}}
    </div>
    <button {{action 'saveComment'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
