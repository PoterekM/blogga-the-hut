{{#if updatePostForm}}
  <h4>Update {{post.author}}'s post about {{post.subject}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>
      <div class="form-group">
        <label for="subject">Subject</label>
        {{input value=subject id="subject" placeholder=post.subject}}
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content" placeholder=post.content}}
      </div>
      <button {{action 'update' post}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
